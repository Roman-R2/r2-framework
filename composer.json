{
    "name": "roman/r2-framework",
    "description": "Custom psr7 framework",
    "type": "project",
    "authors": [
        {
            "name": "Roman",
            "email": "slyusarrv@yandex.ru"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "psr/http-message": "^1.0",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Framework\\" : "src/Framework"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2"
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "vendor/bin/phpunit --colors=always"
    }
}
